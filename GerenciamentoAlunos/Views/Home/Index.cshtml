@{
    ViewBag.Title = "Home Page";
}

<div class="page-header">
    <h1>Gerenciamento de Alunos</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Digite a RA do aluno" id="raAluno">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="GerenciamentoAlunos.CarregarAlunos()">Buscar</button>
                    </span>
                </div>
            </div>
            <table class="table table-striped">
                @*<thead>
                        <tr>
                            <th>Id</th>
                            <th>RA</th>
                            <th>Nome</th>
                            <th>Cidade</th>
                            <th></th>
                        </tr>
                    </thead>*@
                <tbody class="todos-alunos"></tbody>
            </table>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Adicionar Aluno</h2>
            </div>
            <div class="panel-body">
                <form class="form-horizontal add-or-update-aluno">
                    <input type="hidden" id="hdIdAluno" />
                    <div class="form-group" data-bind="with: newBook">
                        <label for="inputNome" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNome" placeholder="Nome"/>
                        </div>
                        <label for="inputRA" class="col-sm-2 control-label">RA</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputRA" placeholder="RA"/>
                        </div>
                        <label for="inputCidade" class="col-sm-2 control-label">Cidade</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputCidade" placeholder="Cidade"/>
                        </div>
                    </div>
                    <a class="btn btn-default" onclick="GerenciamentoAlunos.AddOrUpdate()">Salvar</a>
                </form>
            </div>
        </div>
    </div>
</div>